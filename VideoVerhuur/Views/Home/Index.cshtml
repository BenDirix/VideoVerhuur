@model VideoVerhuur.Models.LogInFormViewModel
@{
    ViewBag.Title = "Home Page";
}

<form action="~/Home/Aanmelden" method="post">
    <div class="form-group">
        <label for="naam">Naam: </label>
        @Html.EditorFor(m => Model.Naam, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label for="naam">Postcode: </label>
        @*<input type="number" name="postcode" value="" class="form-control" />*@
        @Html.EditorFor(m => Model.Postcode, new { htmlAttributes = new {@class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Aanmelden" class="btn btn-primary" />
    </div>
</form>