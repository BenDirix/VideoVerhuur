@model VideoVerhuur.Models.LogInFormViewModel
@{
    ViewBag.Title = "Log In";
}

<form action="~/Home/Aanmelden" method="post">
    <div class="form-group">
        @Html.LabelFor(m => Model.Naam):
        @Html.EditorFor(m => Model.Naam, new { htmlAttributes = new { @class = "form-control", placeholder = "Vul hier uw naam in" } })
    </div>
    <div class="form-group">        
        @Html.LabelFor(m => Model.Postcode):       
        @Html.EditorFor(m => Model.Postcode, new { htmlAttributes = new {@class = "form-control", placeholder = "Vul hier uw Postcode in" } })
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Aanmelden" class="btn btn-primary" />
    </div>
</form>